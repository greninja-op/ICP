{
    "name": "university/portal",
    "description": "University Portal - Unified PHP/React Architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "phpmailer/phpmailer": "^6.9",
        "tecnickcom/tcpdf": "^6.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "pestphp/pest": "^2.34"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest --testsuite=Unit",
        "test:integration": "pest --testsuite=Integration"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
